<?xml version="1.0" encoding="UTF-8"?>

<policyconfig>
        <action id="com.canonical.indicator.sound.AccountsService.ModifyOwnUser">
                <description gettext-domain="indicator-sound">Set properties of own user</description>
                <message gettext-domain="indicator-sound">Authentication is required to set one's own indicator sound properties.</message>
                <defaults>
                        <allow_any>yes</allow_any>
                        <allow_inactive>yes</allow_inactive>
                        <allow_active>yes</allow_active>
                </defaults>
        </action>

        <action id="com.canonical.indicator.sound.AccountsService.ModifyAnyUser">
                <description gettext-domain="indicator-sound">Set properties of any user</description>
                <message gettext-domain="indicator-sound">Authentication is required to set another user's indicator sound properties.</message>
                <defaults>
                        <allow_any>no</allow_any>
                        <allow_inactive>no</allow_inactive>
                        <allow_active>no</allow_active>
                </defaults>
        </action>
</policyconfig>
